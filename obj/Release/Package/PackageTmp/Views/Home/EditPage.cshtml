
@{
    ViewBag.Title = "EditPage";
}

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
            <div class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Edit Menus
                </a>
            </div>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-body">
                <table class="table table-striped table-hover table-bordered">
                    <tr>
                        <th>
                            Text
                        </th>
                        <th>
                            URL
                        </th>
                        <th></th>
                    </tr>
                    <tbody>
                       
                        <tr ng-repeat="x in model.Menus">
                            <td>
                                {{x.Name}}
                            </td>
                            <td>
                                {{x.Url}}
                            </td>
                            <td>
                                <button class="btn btn-danger" ng-click="deleteMenu(x)"><i class="glyphicon glyphicon-remove"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input ng-model="newMenu.Name" style="width:100px;" />
                            </td>
                            <td>
                                <input ng-model="newMenu.Url" style="width:100px;" />
                            </td>
                            <td>
                                <button class="btn btn-primary" ng-click="addMenu()"><i class="glyphicon glyphicon-file"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>


            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingTwo">
            <div class="panel-title">
                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Edit Content1
                </a>
            </div>
        </div>
        <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Title</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" ng-model="model.Content1.Title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-4 control-label">Content</label>
                        <div class="col-sm-8">
                            <textarea ng-model="model.Content1.Content" class="form-control" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Title FontSize</label>
                        <div class="col-sm-8">
                            <input class="form-control" ng-model="model.Content1.TitleFontSize" type="number">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Content FontSize</label>
                        <div class="col-sm-8">
                            <input class="form-control" ng-model="model.Content1.ContentFontSize" type="number">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Crypto Currencies</label>
                        <div class="col-sm-8">
                            <select class="select2 form-control" multiple style="width:100%" ng-model="model.Content1.SelectedCurrencies">
                                <option ng-repeat="x in model.Content1.CryptoCurrencies">{{x}}</option>
                            </select>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingThree">
            <div class="panel-title">
                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
