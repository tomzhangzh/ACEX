<div class="layout-column layout-align-center-stretch" style="height:100%">
    <div class="layout-row layout-align-start-stretch">
        <div class="flex-60">




            <div class="panel" style="border-radius: 20px;">
                <div class="panel-body" style="padding: 20px;">
                    <div style="font-size: 36px;font-weight: 800;" class="blue">Sign Up</div>
                    <div>

                        <!-- Nav tabs -->
                        <ul class="layout-row layout-align-space-between-stretch myTab nav">
                            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Member</a></li>
                            <li class="flex text-center" style="margin-top: 20px;">Or</li>
                            <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Business</a></li>
                        </ul>


                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="home">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="control-label">First Name</label>
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control required" })
                                        </div>
                                        <div class="col-md-6">
                                            <label class="control-label">Last Name</label>
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control required" })
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="control-label">Email</label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        </div>

                                        <div class="col-md-12">
                                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                            <div>
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                                            <div>
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <label class="control-label">Mobile Number</label>
                                            @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control", placeholder = "Type you mobile number…" })
                                        </div>
                                        <div class="col-md-12">
                                            <label class="control-label">Country</label>
                                            @Html.DropDownListFor(m => m.Country, CountryItems
                       , new { @class = "form-control select2", placeholder = "Select your country" })
                                        </div>
                                    </div>

                                    <div style="padding:5px;"></div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-8">
                                            <input type="submit" class="btn btn-green col-md-12" value="Register Account">
                                        </div>
                                    </div>
                                }

                            </div>
                            <div role="tabpanel" class="tab-pane" id="profile">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="control-label">Business Abbreviation</label>
                                            @Html.TextBoxFor(m => m.BusinessAbbreviation, new { @class = "form-control required" })
                                        </div>
                                        <div class="col-md-6">
                                            <label class="control-label">Full Business Name</label>
                                            @Html.TextBoxFor(m => m.FullBusinessName, new { @class = "form-control required" })
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="control-label">Email</label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "Email1" })
                                        </div>

                                        <div class="col-md-12">
                                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                            <div>
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "Password1" })
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                                            <div>
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "ConfirmPassword1" })
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <label class="control-label">Mobile Number</label>
                                            @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control", placeholder = "Type you mobile number…", id = "MobileNumber1" })
                                        </div>
                                        <div class="col-md-12">
                                            <label class="control-label">Country</label>
                                            @Html.DropDownListFor(m => m.Country, CountryItems
                       , new { @class = "form-control select2", placeholder = "Select your country", id = "country1" })
                                        </div>
                                    </div>

                                    <div style="padding:5px;"></div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-8">
                                            <input type="submit" class="btn btn-green col-md-12" value="Register Account">
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>

                    </div>

                </div>

            </div>


        </div>

        <div class="flex layout-column layout-align-center-stretch" style="">

            <div style="padding:20px;background-color: #3749679e;border-radius: 0px 20px 20px 0px;" class="flex-80 layout-column layout-align-center-stretch">
                <div class="white ng-binding" style="font-size:36px;">Patented Ledger</div>
                <div style="padding:5px;"></div>
                <div class="white ng-binding" style="font-size:16px;">
